# 应用基础配置
NEOSCAN_APP_NAME=NeoScan
NEOSCAN_APP_VERSION=1.0.0
NEOSCAN_APP_ENV=development

# JWT配置
NEOSCAN_JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
NEOSCAN_JWT_EXPIRE_HOURS=24
NEOSCAN_JWT_REFRESH_EXPIRE_HOURS=168

# 数据库配置
NEOSCAN_DATABASE_MYSQL_HOST=localhost
NEOSCAN_DATABASE_MYSQL_PORT=3306
NEOSCAN_DATABASE_MYSQL_USERNAME=root
NEOSCAN_DATABASE_MYSQL_PASSWORD=password
NEOSCAN_DATABASE_MYSQL_DATABASE=neoscan_dev

# Redis配置
NEOSCAN_DATABASE_REDIS_HOST=localhost
NEOSCAN_DATABASE_REDIS_PORT=6379
NEOSCAN_DATABASE_REDIS_PASSWORD=
NEOSCAN_DATABASE_REDIS_DB=0

# 安全配置
NEOSCAN_SECURITY_BCRYPT_COST=12
NEOSCAN_SECURITY_RATE_LIMIT_REQUESTS=100
NEOSCAN_SECURITY_RATE_LIMIT_WINDOW=3600

# 邮件配置
NEOSCAN_MAIL_SMTP_HOST=smtp.gmail.com
NEOSCAN_MAIL_SMTP_PORT=587
NEOSCAN_MAIL_USERNAME=your-email@gmail.com
NEOSCAN_MAIL_PASSWORD=your-app-password